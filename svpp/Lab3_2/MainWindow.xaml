<Window x:Class="GraphicsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Графический редактор" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="ColorPicker" VerticalAlignment="Top" Margin="10">
            <ComboBoxItem Content="Красный"/>
            <ComboBoxItem Content="Зелёный"/>
            <ComboBoxItem Content="Синий"/>
        </ComboBox>
        
        <Slider x:Name="BrushSizeSlider" Minimum="1" Maximum="50" Value="10" VerticalAlignment="Top" Margin="10,50,10,0"/>
        
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,100,10,0">
            <RadioButton x:Name="DrawMode" Content="Рисование" GroupName="Mode" IsChecked="True"/>
            <RadioButton x:Name="DeleteMode" Content="Удаление" GroupName="Mode" Margin="10,0,0,0"/>
        </StackPanel>
        
        <InkCanvas x:Name="Canvas" Background="White" Margin="10,150,10,10"/>
    </Grid>
</Window>