@page
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model pz_3.Pages.PaymentModel

@{
    ViewData["Title"] = "Payment";
}

<h1>Калькулятор платежей по кредиту</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Payment.Principal" class="control-label"></label>
                <input asp-for="Payment.Principal" class="form-control"/>
                <span asp-validation-for="Payment.Principal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Rate" class="control-label"></label>
                <input asp-for="Payment.Rate" class="form-control"/>
                <span asp-validation-for="Payment.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Term" class="control-label"></label>
                <input asp-for="Payment.Term" class="form-control"/>
                <span asp-validation-for="Payment.Term" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Calculate" class="btn btn-primary"/>
            </div>
            @if (Model.Payment.Result > 0)
            {
            <div class="form-group">
                <label asp-for="Payment.Result" class="control-label"></label>
                <span class="form-control">@Model.Payment.Result.ToString("C", CultureInfo.GetCultureInfo("en-US"))</span>
                <span asp-validation-for="Payment.Result" class="text-danger"></span>
            </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}